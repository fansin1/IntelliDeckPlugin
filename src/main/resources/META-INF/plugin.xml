<idea-plugin>
    <id>org.example.IntelliDeck</id>
    <name>IntelliDeck</name>
    <vendor email="support@bergamoty.org" url="http://www.bergamoty.org">Bergamoty</vendor>

    <description>IntelliDeck allows you to use your Android smartphone as a touchbar.</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <applicationService serviceInterface="org.bergamoty.intellideck.server.ServerAPIService"
                            serviceImplementation="org.bergamoty.intellideck.server.ServerAPIServiceImpl"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <action id="org.bergamoty.intellideck.plugin.PluginStarter"
                class="org.bergamoty.intellideck.plugin.PluginStarter" text="Control IntelliDeck Server"
                description="IntelliDeck button;" icon="/icons/probot.svg">
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
        </action>


        <!--<action id="org.bergamoty.intellideck.plugin.Plugin"
                class="org.bergamoty.intellideck.plugin.Plugin" text="RUN VASYA RUN"
                description="xrdcfhjklnm;" icon="/icons/ubisoft.svg">
            <add-to-group group-id="ToolbarRunGroup" anchor="last"/>
        </action> -->


    </actions>
</idea-plugin>